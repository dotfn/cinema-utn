<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.grupo2.cinemautn.controllers.LoginController"
>

    <BorderPane prefWidth="600" prefHeight="500" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <!-- Top bar -->
        <top>
            <ToolBar>
                <Label text="📽 Cinema-utn" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button text="About" />
            </ToolBar>
        </top>

        <!-- Centro -->
        <center>
            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-border-color:red;">
                <Label text="Inicio de sesión🧭" style="-fx-font-size: 14px;" />
                <TextField fx:id="emailField"  promptText="juan_perez@utn.com" />
                <Label text="Contraseña🔐" style="-fx-font-size: 14px;" />
                <PasswordField fx:id="passwordField" promptText="********" />
                <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#onLogin" />
                <VBox spacing="5" alignment="CENTER">
                    <Label text="¿No tienes una cuenta?" />
                    <Hyperlink fx:id="registerLink" text="Regístrate aquí" />
                </VBox>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>
